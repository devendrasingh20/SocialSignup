<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >


    <Button
            android:id="@+id/facebook_signUp"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="SignUp with FaceBook"
            android:textStyle="bold"
            android:elevation="2dp"
            android:textColor="@color/black"
            android:background="@color/amber_a100"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />


    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_TIL"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/facebook_signUp"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:paddingStart="30dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorAccent"
    >

        <TextView
                android:id="@+id/nameFace_TV"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginEnd="10dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:hint="Name"
                android:inputType="text"/>


    </com.google.android.material.textfield.TextInputLayout>

    <View
            android:id="@+id/view_name"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/name_TIL"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="30dp"
            android:background="@color/profile_grey_2"
            android:layout_height="1dp">

    </View>


    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_TIL"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/name_TIL"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:paddingStart="30dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorAccent"
    >

        <TextView
                android:id="@+id/emailFace_TV"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textAlignment="center"

                android:layout_marginEnd="10dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:hint="Email"
                android:inputType="text"/>


    </com.google.android.material.textfield.TextInputLayout>

    <View
            android:id="@+id/view_email"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/email_TIL"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="30dp"
            android:background="@color/profile_grey_2"
            android:layout_height="1dp">

    </View>


    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/social_TIL"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/email_TIL"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:paddingStart="30dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorAccent"
    >

        <TextView
                android:id="@+id/socialIDFace_TV"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginEnd="10dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:hint="ID"
                android:inputType="text"/>


    </com.google.android.material.textfield.TextInputLayout>

    <View
            android:id="@+id/view_id"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/social_TIL"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="30dp"
            android:background="@color/profile_grey_2"
            android:layout_height="1dp">

    </View>

</androidx.constraintlayout.widget.ConstraintLayout>