<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Social SignUp"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/green_a700"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"

    />

    <Button
            android:id="@+id/google"
            android:layout_width="170dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_height="70dp"
            android:text="Google Login"
            android:elevation="2dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/facebook"
            android:layout_marginTop="20dp"/>


    <Button
            android:id="@+id/facebook"
            android:layout_width="170dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:text="FaceBook LOgin"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:elevation="2dp"
            app:layout_constraintStart_toEndOf="@+id/google"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>


    <Button
            android:id="@+id/linkdin"
            android:layout_width="170dp"
            app:layout_constraintTop_toBottomOf="@+id/google"
            android:layout_height="70dp"
            android:text="Linkdin Login"
            android:elevation="2dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/twiter"/>


    <Button
            android:id="@+id/twiter"
            android:layout_width="170dp"
            app:layout_constraintTop_toBottomOf="@+id/facebook"
            android:layout_height="70dp"
            android:text="Twiter Login"
            android:elevation="2dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@+id/linkdin"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>